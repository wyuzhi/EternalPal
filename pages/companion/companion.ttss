/* 全局防止横向滚动 */
page {
  overflow-x: hidden;
  max-width: 100vw;
}

* {
  box-sizing: border-box;
}

/* 背景图片 */
.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: -1;
  
  background: var(--bg-gradient);
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: 0 var(--p-l) var(--p-l) var(--p-l);
  box-sizing: border-box;
  overflow-x: hidden;
  max-width: 100vw;
  position: relative;
}

/* 顶部导航 */
.header {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  padding: var(--p-l);
  z-index: 199;
}

.header-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--bg-frosted);
  border-radius: 50%;
  padding: var(--p-m);
  border: 1rpx solid var(--border-light);
  box-shadow: 0 2rpx 8rpx var(--shadow-light);
  backdrop-filter: blur(10rpx);
  transition: all 0.2s ease;
  width: 80rpx;
  height: 80rpx;
}

.header-icon:active {
  transform: scale(0.95);
  background-color: var(--bg-frosted-dark);
}

.memory-icon, .menu-icon {
  width: 50rpx;
  height: 50rpx;
}

/* 宠物信息区域 */
.pet-info-container {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: var(--m-s);
  width: 100%;
}
.pet-info {
  display: flex;
  align-items: center;
  gap: var(--m-m);
  min-width: 200rpx;
}

/* 宠物头像容器 */
.pet-avatar-container {
  width: 80rpx;
  height: 80rpx;
}

.pet-avatar {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  box-shadow: 0 2rpx 8rpx var(--shadow-light);
  background-color: var(--bg-secondary);
}

/* 宠物详细信息 */
.pet-details {
  display: flex;
  flex-direction: column;
  align-items: flex-start;
  gap: 4rpx;
}

.pet-name {
  font-size: var(--f-md);
  font-weight: bold;
  color: var(--text-primary);
  line-height: 1.4;
}

/* 心情状态 */
.mood-status {
  display: flex;
  align-items: center;
  gap: var(--m-s);
}

.mood-emoji {
  font-size: var(--f-sm);
  line-height: 1;
}

.mood-text {
  font-size: var(--f-sm);
  color: var(--text-secondary);
  line-height: 1;
}

/* 亲密度 */
.intimacy {
  display: flex;
  align-items: center;
  /* padding: var(--p-m) 0; */
  width: 50%;
  z-index: 100;
  opacity: 1;
  transform: scale(1);
  transition: opacity 0.5s ease-out, transform 0.5s ease-out;
}

/* 亲密度模块出现动画 */
.intimacy.show {
  animation: intimacyModuleShow 0.6s ease-out;
}

/* 亲密度模块消失动画 */
.intimacy.hide {
  opacity: 0;
  transform: scale(0.9);
}

.heart-container {
  position: relative;
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: var(--m-s);
}

.heart-icon {
  width: 40rpx;
  height: 40rpx;
  animation: heartbeat 2s ease-in-out infinite;
}

@keyframes heartbeat {
  0%, 100% { transform: scale(1); }
  50% { transform: scale(1.1); }
}

.intimacy-level {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  font-size: 20rpx;
  color: var(--bg-tertiary);
  z-index: 1;
}

.progress-container {
  flex: 1;
  position: relative;
  margin-left: var(--m-s);
}

.progress-bar {
  width: 100%;
  height: 16rpx;
  background-color: var(--bg-frosted);
  backdrop-filter: blur(10rpx);
  border-radius: var(--r-pill);
  overflow: hidden;
  position: relative;
}

.progress {
  height: 100%;
  background: linear-gradient(45deg, #7968E5, #E076D6, #FF7787);
  border-radius: 8rpx;
  transition: width 0.3s ease;
  position: relative;
}

.progress::after {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: linear-gradient(90deg, transparent 0%, rgba(255, 255, 255, 0.3) 50%, transparent 100%);
  animation: shimmer 2s infinite;
}

@keyframes shimmer {
  0% { transform: translateX(-100%); }
  100% { transform: translateX(100%); }
}

/* 亲密值增加提示 */
.intimacy-increment {
  position: absolute;
  left: 100%;
  top: 50%;
  transform: translateY(-50%);
  margin-left: var(--m-s);
  font-size: var(--f-sm);
  font-weight: bold;
  color: #FF7787;
  background: rgba(255, 119, 135, 0.1);
  padding: 2rpx 4rpx;
  border-radius: var(--r-s);
  border: 1rpx solid rgba(255, 119, 135, 0.3);
  z-index: 10;
  white-space: nowrap;
  opacity: 1;
  transition: opacity 0.5s ease-out, transform 0.5s ease-out;
}

/* 出现动画 */
.intimacy-increment.show {
  animation: intimacyShow 0.6s ease-out;
}

/* 消失动画 */
.intimacy-increment.hide {
  opacity: 0;
  transform: translateY(-50%) scale(0.8);
}

/* 亲密度模块的出现动画 */
@keyframes intimacyModuleShow {
  0% {
    opacity: 0;
    transform: scale(0.5) translateY(-10rpx);
  }
  50% {
    opacity: 1;
    transform: scale(1.05) translateY(0);
  }
  100% {
    opacity: 1;
    transform: scale(1) translateY(0);
  }
}

/* 亲密值增加提示的出现动画 */
@keyframes intimacyShow {
  0% {
    opacity: 0;
    transform: translateY(-50%) scale(0.5);
  }
  50% {
    opacity: 1;
    transform: translateY(-50%) scale(1.1);
  }
  100% {
    opacity: 1;
    transform: translateY(-50%) scale(1);
  }
}

/* 当前对话气泡样式 */
.current-chat-bubble {
  position: absolute;
  top: 25%;
  left: 50%;
  transform: translateX(-50%);
  max-width: 100%;
  width: auto;
  /* min-width: 400rpx; */
  z-index: 20;
  animation: bubbleAppear 0.3s ease-out;
}

.bubble-content {
  background-color: var(--bg-primary);
  backdrop-filter: blur(20rpx);
  /* border: 1rpx solid var(--border-light); */
  border-radius: var(--r-l);
  padding: var(--p-m);
  box-shadow: 0 2rpx 8rpx var(--shadow-light);
  position: relative;
}

.bubble-content text {
  font-size: var(--f-base);
  color: var(--text-primary);
  line-height: 1.6;
  word-wrap: break-word;
  word-break: break-all;
  display: block;
  min-width: 60rpx;
  max-height: 450rpx;
  overflow-y: auto;
}

/* 气泡文本滚动条 */
.bubble-content text::-webkit-scrollbar {
  width: 4rpx;
}

.bubble-content text::-webkit-scrollbar-track {
  background: transparent;
}

.bubble-content text::-webkit-scrollbar-thumb {
  background: var(--text-secondary);
  border-radius: 2rpx;
  opacity: 0.6;
}

.bubble-content text::-webkit-scrollbar-thumb:hover {
  background: var(--text-primary);
  opacity: 0.8;
}

/* 气泡尾巴 */
.bubble-content:before {
  content: "";
  width: 0;
  height: 0;
  /*IE6下，height:0;不顶用，可使用font-size:0; + overflow:hidden;修复此问题*/
  font-size:0;
  overflow:hidden;
  display: block;
  border-width: 20rpx;
  /*保留我们需要的那边的三角形，其他三角形设置为透明*/
  border-color: var(--bg-primary) transparent transparent transparent;
  border-style: solid dashed dashed dashed;
  backdrop-filter: blur(20rpx);

  position: absolute;
  left: 50%; /*相对于矩形高度的位置*/
  bottom: -38rpx; /* 底部对齐，向下偏移尾巴高度 -矩形边框+三角形边框*2 */
  transform: translateX(-50%); /* 水平居中 */
}

