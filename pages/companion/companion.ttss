.chat-messages {
  flex: 2;
  margin-bottom: 20rpx;
  padding: 20rpx;
  /* background-color: #fff9f0; */
  border-radius: 20rpx;
  height: 33%;
  width: 100%;
  overflow-x: hidden;
  box-sizing: border-box;
}

.message-container {
  margin-bottom: 16rpx;
  display: flex;
}

.ai-message {
  justify-content: flex-start;
}

.user-message {
  justify-content: flex-end;
}

.message-bubble {
  max-width: 70%;
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-wrap: break-word;
  word-break: break-all;
  overflow-wrap: break-word;
}

.ai-message .message-bubble {
  background-color: #fff;
  border: 2rpx solid #eee;
}

.user-message .message-bubble {
  background-color: #07c160;
  color: #fff;
}

/* å¿«æ·åŠŸèƒ½åŒº */
.quick-actions {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  overflow-x: hidden;
  box-sizing: border-box;
}

.action-button {
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
}

.action-icon.recording {
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

/* è¾“å…¥å¡ç‰‡åŒºåŸŸ */
.input-card-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  z-index: 100;
}
.input-card {
  padding: 0 var(--p-l);
}
.input-container {
  position: relative;
  display: flex;
  align-items: center; /* é»˜è®¤ */
  padding: var(--p-s);
  
  background-color: var(--bg-frosted);
  border-radius: 55rpx;
  border: 1rpx solid var(--border-light);
  box-shadow: 0 4rpx 20rpx var(--shadow-light);
  backdrop-filter: blur(20rpx);
}

/* å½“è¾“å…¥æ¡†æœ‰å†…å®¹æˆ–èšç„¦æ—¶ï¼Œå‘é€æŒ‰é’®å¯¹é½åº•éƒ¨ */
.input-container:has(.chat-input:not(:placeholder-shown)),
.input-container:has(.chat-input:focus) {
  align-items: flex-end;
}

/* è¾“å…¥æ¡† */
.chat-input {
  flex: 1;
  min-height: 70rpx;
  max-height: 300rpx;
  background: transparent;
  border: none;
  font-size: var(--f-base);
  color: var(--text-primary);
  box-sizing: border-box;
  outline: none;
  resize: none;
  line-height: 70rpx; /* å•è¡Œæ—¶ä¸å®¹å™¨é«˜åº¦åŒ¹é… */
  text-align: center; /* æ°´å¹³å±…ä¸­ */
  word-wrap: break-word;
  word-break: break-all;
  transition: all 0.2s ease;
}

.chat-input::placeholder {
  color: var(--text-tertiary);
  text-align: center;
}

/* å½“è¾“å…¥æ¡†æœ‰å†…å®¹æ—¶ */
.chat-input:not(:placeholder-shown) {
  text-align: left;
  padding: calc((70rpx - 1.4em) / 2); /* ä¿æŒé¡¶éƒ¨å¯¹é½ */
  line-height: 1.4; /* å¤šè¡Œæ—¶ä½¿ç”¨æ­£å¸¸è¡Œé«˜ */
}

/* è¾“å…¥æ¡†èšç„¦ */
.chat-input:focus {
  text-align: left;
  line-height: 1.4;
  padding-top: calc((70rpx - 1.4em) / 2);
}

/* å‘é€æŒ‰é’® */
.send-button {
  width: 70rpx;
  height: 70rpx;
  background-color: var(--bg-frosted);
  border: 1rpx solid var(--border-light);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
}

.send-button:active {
  background-color: var(--bg-frosted-dark);
  transform: scale(0.95);
}

.send-icon {
  width: 45rpx;
  height: 45rpx;
  /* filter: brightness(0) saturate(100%) invert(90%); */
