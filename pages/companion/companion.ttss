  display: block; /* ç¡®ä¿å›¾æ ‡æ­£ç¡®æ˜¾ç¤º */
}

/* å¿«æ·è¯æœ¯å®¹å™¨ */
.quick-replies-container {
  margin-top: var(--m-m);
  z-index: 101;
  width: 100%;
  overflow: hidden;
}

.quick-replies-scroll {
  width: 100%;
  white-space: nowrap;
}

.quick-replies {
  display: flex;
  align-items: flex-start;
  gap: var(--m-s);
  padding: 0 var(--p-l);
  white-space: nowrap;
}

.quick-reply {
  flex: none;
  max-width: 200rpx;
  padding: 0 var(--p-m);
  background-color: var(--bg-frosted);
  border: 1rpx solid var(--border-light);
  border-radius: var(--r-pill);
  font-size: var(--f-sm);
  color: var(--text-secondary);
  text-align: center;
  line-height: 56rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  transition: all 0.2s ease;
  backdrop-filter: blur(20rpx);
  box-sizing: border-box;
}

.quick-reply::after {
  border: none;
}

.quick-reply:active {
  background-color: ar(--bg-frosted);
  color: var(--text-primary);
}

