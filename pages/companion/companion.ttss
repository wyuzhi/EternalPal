/* 全局防止横向滚动 */
page {
  overflow-x: hidden;
  max-width: 100vw;
}

* {
  box-sizing: border-box;
}

/* 背景图片 */
.background-image {
  position: fixed;
  top: 0;
  left: 0;
  width: 100vw;
  height: 100vh;
  z-index: -1;
  
  background: linear-gradient(180deg, 
    #ebf5ff 6%, 
    #e7f6c7 40%, 
    #f7f9df 76%, 
    #fffbeb 100%);
}

.container {
  display: flex;
  flex-direction: column;
  height: 100vh;
  padding: var(--p-l);
  box-sizing: border-box;
  overflow-x: hidden;
  max-width: 100vw;
  position: relative;
}

/* 顶部导航 */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx 0;
  margin-bottom: 10rpx;
}
.header-icon {
  display: flex;
  justify-content: center;
  align-items: center;
  background-color: var(--bg-frosted);
  border-radius: 50%;
  padding: var(--p-m);
}
.memory-icon, .list-icon {
  width: 50rpx;
  height: 50rpx;
}

/* TODO👇 */
.pet-info {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.pet-name {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.mood-indicator {
  font-size: 24rpx;
  color: #999;
}

/* 心情条 */
.mood-bar {
  display: flex;
  align-items: center;
  margin-bottom: 30rpx;
  padding: 0 20rpx;
}

.heart-icon {
  font-size: 32rpx;
  color: #ff4d4f;
  margin-right: 10rpx;
}

.progress-bar {
  flex: 1;
  height: 12rpx;
  background-color: #eee;
  border-radius: 6rpx;
  overflow: hidden;
  margin: 0 10rpx;
}

.progress {
  height: 100%;
  background-color: #ff7e00;
  border-radius: 6rpx;
}

.mood-value {
  font-size: 28rpx;
  color: #666;
}

/* 3D模型展示区 */
.model-display {
  position: relative;
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 500rpx;
}

/* 加载覆盖层 */
.loading-overlay {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  /* background-color: rgba(255, 249, 240, 0.9); */
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.loading-progress {
  width: 80%;
  margin-top: 10px;
}

/* 调试信息样式 */
/* 已移除 debug 信息样式 */

.scene-indicator,
.first-success {
  font-size: 24rpx;
  color: #999;
  margin: 10rpx 0;
}

.model-container {
  width: 400rpx;
  height: 400rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  margin: -30rpx 0 20rpx 0;
  position: relative;
  overflow: visible;
  background-color: transparent;
  border: none;
  border-radius: 10rpx;
}

.pet-image {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 5;
  display: block;
  min-width: 100%;
  min-height: 100%;
  background-color: transparent;
}

/* 图片模式下的容器样式增强 */
.model-container .is-image-mode-container {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.model-controls {
  display: flex;
  justify-content: center;
  margin: 10rpx 0;
}

.control-button {
  margin: 0 10rpx;
  font-size: 24rpx;
  height: 60rpx;
  line-height: 60rpx;
  background-color: #f5f5f5;
  color: #333;
}

.control-button:active {
  background-color: #e6e6e6;
}

.model-canvas {
  width: 100%;
  height: 100%;
  position: relative;
  z-index: 5;
  background-color: transparent;
}

.pet-image {
  width: 100%;
  height: 100%;
}

.model-placeholder {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 100%;
}

/* 聊天消息区域 */
.chat-messages {
  flex: 2;
  margin-bottom: 20rpx;
  padding: 20rpx;
  /* background-color: #fff9f0; */
  border-radius: 20rpx;
  height: 33%;
  width: 100%;
  overflow-x: hidden;
  box-sizing: border-box;
}

.message-container {
  margin-bottom: 16rpx;
  display: flex;
}

.ai-message {
  justify-content: flex-start;
}

.user-message {
  justify-content: flex-end;
}

.message-bubble {
  max-width: 70%;
  padding: 16rpx 20rpx;
  border-radius: 20rpx;
  font-size: 28rpx;
  line-height: 1.5;
  word-wrap: break-word;
  word-break: break-all;
  overflow-wrap: break-word;
}

.ai-message .message-bubble {
  background-color: #fff;
  border: 2rpx solid #eee;
}

.user-message .message-bubble {
  background-color: #07c160;
  color: #fff;
}

/* 快捷功能区 */
.quick-actions {
  display: flex;
  justify-content: space-around;
  margin-bottom: 20rpx;
  padding: 0 20rpx;
  overflow-x: hidden;
  box-sizing: border-box;
}

.action-button {
  width: 80rpx;
  height: 80rpx;
  background-color: #fff;
  border-radius: 50%;
  display: flex;
  justify-content: center;
  align-items: center;
  box-shadow: 0 4rpx 10rpx rgba(0, 0, 0, 0.1);
}

.action-icon {
  width: 40rpx;
  height: 40rpx;
}

.action-icon.recording {
  animation: pulse 1.5s infinite;
}

@keyframes pulse {
  0% { opacity: 1; }
  50% { opacity: 0.5; }
  100% { opacity: 1; }
}

/* 输入卡片区域 */
.input-card-container {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  display: flex;
  flex-direction: column;
  z-index: 100;
}
.input-card {
  padding: 0 var(--p-l);
}
.input-container {
  position: relative;
  display: flex;
  align-items: center; /* 默认 */
  padding: var(--p-s);
  
  background-color: var(--bg-frosted);
  border-radius: 55rpx;
  border: 1rpx solid var(--border-light);
  box-shadow: 0 4rpx 20rpx var(--shadow-light);
  backdrop-filter: blur(20rpx);
}

/* 当输入框有内容或聚焦时，发送按钮对齐底部 */
.input-container:has(.chat-input:not(:placeholder-shown)),
.input-container:has(.chat-input:focus) {
  align-items: flex-end;
}

/* 输入框 */
.chat-input {
  flex: 1;
  min-height: 70rpx;
  max-height: 300rpx;
  background: transparent;
  border: none;
  font-size: var(--f-base);
  color: var(--text-primary);
  box-sizing: border-box;
  outline: none;
  resize: none;
  line-height: 70rpx; /* 单行时与容器高度匹配 */
  text-align: center; /* 水平居中 */
  word-wrap: break-word;
  word-break: break-all;
  transition: all 0.2s ease;
}

.chat-input::placeholder {
  color: var(--text-tertiary);
  text-align: center;
}

/* 当输入框有内容时 */
.chat-input:not(:placeholder-shown) {
  text-align: left;
  padding: calc((70rpx - 1.4em) / 2); /* 保持顶部对齐 */
  line-height: 1.4; /* 多行时使用正常行高 */
}

/* 输入框聚焦 */
.chat-input:focus {
  text-align: left;
  line-height: 1.4;
  padding-top: calc((70rpx - 1.4em) / 2);
}

/* 发送按钮 */
.send-button {
  width: 70rpx;
  height: 70rpx;
  background-color: var(--bg-frosted);
  border: 1rpx solid var(--border-light);
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: all 0.2s ease;
}

.send-button:active {
  background-color: var(--bg-frosted-dark);
  transform: scale(0.95);
}

.send-icon {
  width: 45rpx;
  height: 45rpx;
  /* filter: brightness(0) saturate(100%) invert(90%); */
  flex-shrink: 0; /* 防止图标被压缩 */
  display: block; /* 确保图标正确显示 */
}

/* 快捷话术容器 */
.quick-replies-container {
  margin-top: var(--m-m);
  z-index: 101;
  width: 100%;
  overflow: hidden;
}

.quick-replies-scroll {
  width: 100%;
  white-space: nowrap;
}

.quick-replies {
  display: flex;
  align-items: flex-start;
  gap: var(--m-s);
  padding: 0 var(--p-l);
  white-space: nowrap;
}

.quick-reply {
  flex: none;
  max-width: 200rpx;
  padding: 0 var(--p-m);
  background-color: var(--bg-frosted);
  border: 1rpx solid var(--border-light);
  border-radius: var(--r-pill);
  font-size: var(--f-sm);
  color: var(--text-secondary);
  text-align: center;
  line-height: 56rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  transition: all 0.2s ease;
  backdrop-filter: blur(20rpx);
  box-sizing: border-box;
}

.quick-reply::after {
  border: none;
}

.quick-reply:active {
  background-color: ar(--bg-frosted);
  color: var(--text-primary);
}

/* 测试按钮 */
.test-button {
  background-color: var(--text-primary) !important;
  color: var(--bg-primary) !important;
  border-color: var(--text-primary) !important;
}

/* 浮动菜单样式 */
.float-menu {
  position: fixed;
  top: 200rpx;
  right: 40rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: rgba(0, 0, 0, 0.8);
  border-radius: 16rpx;
  padding: 20rpx;
  z-index: 999;
  box-shadow: 0 8rpx 24rpx rgba(0, 0, 0, 0.2);
}

.menu-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-bottom: 30rpx;
  color: #fff;
}

.menu-item:last-child {
  margin-bottom: 0;
}

.icon {
  width: 48rpx;
  height: 48rpx;
  margin-bottom: 10rpx;
}

.menu-item text {
  font-size: 28rpx;
  color: #ffffff;
}
