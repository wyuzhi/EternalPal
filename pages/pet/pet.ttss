/* 调整性格和爱好的网格选择项为上图下文字，1:1比例 */
.grid-selection {
  display: flex;
  flex-wrap: wrap;
  justify-content: center;
  margin-top: 20rpx;
}

.grid-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  width: 120rpx;
  height: 160rpx;
  margin: 16rpx;
  padding: 16rpx;
  border-radius: 12rpx;
  background-color: #ffffff;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
  transition: all 0.3s ease;
  position: relative;
}

.grid-item.active {
  background-color: #fff0f0;
  box-shadow: 0 4rpx 16rpx rgba(255, 0, 0, 0.2);
  border: 2rpx solid #ff0000;
