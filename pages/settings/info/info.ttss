/* 页脚 */
.footer {
  text-align: center;
  padding: var(--p-xl) 0;
  border-top: 1rpx solid var(--border-light);
  margin-top: var(--m-xl);
}

.copyright {
  font-size: var(--f-sm);
  color: var(--text-tertiary);
  display: block;
  margin-bottom: var(--m-s);
}

.powered {
  font-size: var(--f-xs);
  color: var(--text-tertiary);
  font-style: italic;
}

/* 响应式设计 */
@media (max-width: 750rpx) {
  .app-header {
    flex-direction: column;
    text-align: center;
  }
  
  .logo-container {
    margin-right: 0;
    margin-bottom: var(--m-m);
  }
  
  .timeline-item {
    flex-direction: column;
  }
  
  .timeline-date {
    width: auto;
    margin-bottom: var(--m-s);
  }
}
