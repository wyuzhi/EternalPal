@import '../settings.ttss';

.container {
  padding: var(--p-container);
  /* background-color: var(--bg-primary); */
  min-height: 100vh;
  padding: var(--p-l);
  background: var(--bg-gradient);
}

/* 应用信息头部 */
.app-header {
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  padding: var(--p-xl) 0;
  margin-bottom: var(--m-l);
}

.logo-container {
  margin-right: var(--m-l);
}

.app-logo {
  width: 200rpx;
  height: 200rpx;
  border-radius: 50%;
  background-color: var(--bg-secondary);
  box-shadow: 0 8rpx 24rpx var(--shadow-medium);
}

.app-info {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.app-name {
  /* width: 200rpx; */
  height: 80rpx;
  display: block;
  margin: var(--m-m) 0;
}

.version-container {
  display: flex;
  align-items: center;
  gap: var(--p-s);
  padding: var(--p-s) var(--p-m);
  background-color: var(--bg-primary);
  border-radius: var(--r-pill);
  width: fit-content;
}

.app-version {
  font-size: var(--f-sm);
  color: var(--text-secondary);
}

/* 描述卡片 */
.app-description {
  font-size: var(--f-base);
  color: var(--text-secondary);
  line-height: 1.6;
}

/* Bento网格布局 */
.bento-grid {
  display: grid;
  grid-template-columns: 2fr 1fr 1fr;
  grid-template-rows: 1fr 1fr;
  gap: var(--p-m);
  height: 560rpx;
}

.bento-item {
  background-color: var(--bg-frosted);
  border-radius: var(--r-card);
  border: 1rpx solid var(--border-light);
  box-shadow: 0 4rpx 20rpx var(--shadow-light);
  backdrop-filter: blur(10rpx);
  overflow: hidden;
  transition: all 0.3s ease;
}

.bento-item:active {
  transform: scale(0.98);
}

.bento-item.large {
  grid-column: 1;
  grid-row: 1 / 3;
}

.bento-item.small {
  grid-column: 2 / 4;
}

.bento-content {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  height: 100%;
  padding: 0;
  text-align: center;
  position: relative;
}

.bento-icon {
  width: 100%;
  height: 100%;
  border-radius: var(--r-card);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-bottom: 0;
  box-shadow: none;
}

.icon-image {
  width: 100%;
  height: 100%;
  padding: var(--p-m);
  border-radius: var(--r-card);
}


.bento-title {
  position: absolute;
  bottom: var(--p-m);
  left: var(--p-m);
  right: var(--p-m);
  font-size: var(--f-base);
  color: var(--text-primary);
  font-weight: 500;
  line-height: 1.4;
  background-color: var(--bg-frosted);
  padding: var(--p-s);
  border-radius: var(--r-pill);
  backdrop-filter: blur(10rpx);
  text-align: center;
}

.bento-item.large .bento-title {
  bottom: var(--p-l);
  left: var(--p-l);
  right: var(--p-l);
}

/* 时间线样式 */
/* .timeline-container {
  
} */

.timeline-item {
  display: flex;
  margin-bottom: var(--m-l);
  position: relative;
}
.timeline-item:first-child {
  margin-top: 0;
}
.timeline-item:last-child {
  margin-bottom: 0;
}

.timeline-date {
  width: 100%;
  flex-shrink: 0;
}

.timeline-date text {
  font-size: var(--f-sm);
  color: var(--text-tertiary);
  line-height: 1;
}

.timeline-content {
  flex: 1;
  display: flex;
  align-items: flex-start;
  position: relative;
}

.timeline-dot {
  width: 10rpx;
  height: 10rpx;
  border-radius: 50%;
  margin-right: var(--m-m);
  margin-top: 16rpx; /* 特殊处理 */
  flex-shrink: 0;
  position: relative;
  z-index: 2;
}

.timeline-info {
  flex: 1;
}

.timeline-title {
  font-size: var(--f-base);
  font-weight: 600;
  color: var(--text-primary);
  display: block;
  /* margin-bottom: var(--m-s); */
}

.timeline-desc {
  font-size: var(--f-sm);
  color: var(--text-secondary);
  line-height: 1.4;
}

/* 时间线状态样式 */
.timeline-item.completed .timeline-dot {
  background-color: var(--success-color);
}

.timeline-item.in-progress .timeline-dot {
  background-color: var(--primary-color);
}

.timeline-item.planned .timeline-dot {
  background-color: var(--text-tertiary);
}

